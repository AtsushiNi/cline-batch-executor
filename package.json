{
  "name": "cline-batch-executor",
  "displayName": "Cline Batch Executor",
  "description": "Batch processing extension using Cline API to apply AI transformations to multiple files",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:cline-batch-executor.startBatchProcessing",
    "onCommand:cline-batch-executor.openDashboard"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cline-batch-executor.startBatchProcessing",
        "title": "Cline Batch Executor: 対象ファイルとタスク内容を指定してClineのバッチ処理を開始する"
      },
      {
        "command": "cline-batch-executor.openDashboard",
        "title": "Cline Batch Executor: ダッシュボードを開く"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "cline-batch-executor.startBatchProcessing",
          "when": "workspaceFolderCount >= 1"
        },
        {
          "command": "cline-batch-executor.openDashboard",
          "when": "workspaceFolderCount >= 1"
        }
      ],
      "explorer/context": [
        {
          "command": "cline-batch-executor.startBatchProcessing",
          "group": "navigation",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.5.5"
  },
  "extensionDependencies": [
    "saoudrizwan.claude-dev"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/cline-batch-executor.git"
  },
  "publisher": "yourpublisher",
  "icon": "images/icon.png",
  "keywords": [
    "cline",
    "batch",
    "ai",
    "refactor",
    "automation"
  ],
  "license": "MIT",
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  }
}
